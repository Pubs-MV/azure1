{
  "handler": "Microsoft.Compute.MultiVm",
  "version": "0.0.1-preview",
  "parameters": {
    "basics": [
      {
        "name": "adminUsername",
        "type": "Microsoft.Compute.UserNameTextBox",
        "label": "Username",
        "toolTip": "Admin username for the virtual machines. Same Credientials is to SSH to the box.",
        "osPlatform": "Linux"
      },
      {
        "name": "adminPassword",
        "type": "Microsoft.Compute.CredentialsCombo",
        "label": {
                  "authenticationType": "Authentication type",
                  "password": "Password",
                  "confirmPassword": "Confirm password",
                  "sshPublicKey": "SSH public key"
                },
        "toolTip": {
                "authenticationType": "",
                "password": "",
                "sshPublicKey": ""
              },
         "constraints": {
                "required": true
              },
	 "options": {
  		"hideConfirmation": false
	 }
      },
      {
        "name": "userImageStorageAccountName",
        "type": "Microsoft.Compute.UserNameTextBox",
        "label": "Storage Account Name",
        "toolTip": "Storage Account Name",
        "osPlatform": "Linux"
      },
      {
        "name": "srcIPAddressPrefix",
        "type": "Microsoft.Compute.UserNameTextBox",
        "label": "Source IP address prefix to use for VNET",
        "toolTip": "Source IP prefix for vnet",
        "osPlatform": "Linux"
      }
    ],
    "steps": [
    	"name": "SampleClusterConfig",
        "label": "Cluster settings",
        "subLabel": {
          "preValidation": "Configure the cluster",
          "postValidation": "Done"
        },
    ],
    "outputs": {
      "adminUsername": "[basics('adminUsername')]",
      "location": "[location()]",
      "authenticationType":  "[basics('adminPassword').authenticationType]",
      "password": "[basics('adminPassword').password]",
      "sshKey": "[basics('adminPassword').sshPublicKey]",
      "userImageStorageAccountName": "[basics('userImageStorageAccountName')]",
      "srcIPAddressPrefix": "[basics('srcIPAddressPrefix')]"
    }
  }
}
